.col-lg-6.col-sm-6.col-xs-12
	.widget
		.widget-header.bordered-bottom.bordered-blue
			span.widget-caption Nuevo grado
		.widget-body
			div
				form(role="form" ng-submit="crear()")
					.form-group
						label(for="grado-nombre") Nombre
						input.form-control#grado-nombre(type="text" ng-model="grado.nombre" placeholder="Nombre")
					.form-group
						label(for="grado-abrev") Abreviatura
						input.form-control#grado-abrev(type="text" ng-model="grado.abrev" placeholder="Abreviatura")
					.form-group
						label(for="grado-orden") Orden
						.spinner.spinner-horizontal
							input.spinner-input.form-control#grado-orden(type="text" minlength="0" maxlength="10" ng-model="grado.orden")
							.spinner-buttons.btn-group
								button.btn.spinner-down.blueberry(type="button" ng-click="restarOrden()")
									i.fa.fa-minus
								button.btn.spinner-up.purple(type="button" ng-click="sumarOrden()")
									i.fa.fa-plus
					br
					br
					.form-group
						label Nivel educativo
						ui-select(ng-model="grado.nivel" theme="select2" style="min-width: 200px;")
							ui-select-match(placeholder="Nivel educativo" allow-clear="true") {{$select.selected.nombre}}
							ui-select-choices(repeat="nivel in niveles | filter: $select.search")
								div(ng-bind-html="nivel.nombre | highlight: $select.search")


					br
					hr.wide
					input.btn.btn-primary.btn-lg.shiny(type="submit" ng-submit="crear()" value="Crear") 

