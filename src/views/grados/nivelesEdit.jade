.col-lg-6.col-sm-6.col-xs-12
	.widget
		.widget-header.bordered-bottom.bordered-blue
			span.widget-caption Editar nivel
		.widget-body
			div
				form(role="form" ng-submit="guardar()")
					.form-group
						label(for="nivel-nombre") Nombre
						input.form-control#nivel-nombre(type="text" ng-model="nivel.nombre" placeholder="Nombre")
					.form-group
						label(for="nivel-abrev") Abreviatura
						input.form-control#nivel-abrev(type="text" ng-model="nivel.abrev" placeholder="Abreviatura")
					.form-group
						label(for="nivel-orden") Orden
						.spinner.spinner-horizontal
							input.spinner-input.form-control#nivel-orden(type="text" minlength="0" maxlength="10" ng-model="nivel.orden")
							.spinner-buttons.btn-group
								button.btn.spinner-down.blueberry(type="button" ng-click="restarOrden()")
									i.fa.fa-minus
								button.btn.spinner-up.purple(type="button" ng-click="sumarOrden()")
									i.fa.fa-plus
					
					br
					hr.wide
					a.btn.btn-default.btn-lg.shiny(ui-sref="panel.niveles") Cancelar 
					input.btn.btn-primary.btn-lg.shiny(type="submit" ng-submit="guardar()" value="Guardar nivel") 

