.col-lg-6.col-sm-6.col-xs-12
	.widget
		.widget-header.bordered-bottom.bordered-blue
			span.widget-caption Nuevo grupo
		.widget-body
			div
				form(role="form" ng-submit="crear()")
					.form-group
						label(for="grupo-nombre") Nombre
						input.form-control#grupo-nombre(type="text" ng-model="grupo.nombre" placeholder="Nombre")
					.form-group
						label(for="grupo-abrev") Abreviatura
						input.form-control#grupo-abrev(type="text" ng-model="grupo.abrev" placeholder="Abreviatura")
					br
					.form-group
						label Titular
						ui-select(ng-model="grupo.titular" theme="select2" style="min-width: 200px;")
							ui-select-match(placeholder="Profesor titular" allow-clear="true") {{$select.selected.nombres + ' ' + $select.selected.apellidos}}
							ui-select-choices(repeat="titular in profesores | filter: $select.search")
								div(ng-bind-html="titular.nombres + ' ' + titular.apellidos | highlight: $select.search")
					
					br
					.form-group
						label Grado
						ui-select(ng-model="grupo.grado" theme="select2" style="min-width: 200px;")
							ui-select-match(placeholder="Grado" allow-clear="true") {{$select.selected.nombre}}
							ui-select-choices(repeat="grado in grados | filter: $select.search")
								div(ng-bind-html="grado.nombre | highlight: $select.search")
					.form-group
						label(for="grupo-valor-matricula") Valor matrícula
						input.form-control#grupo-valormatricula(type="number" step="5" min="0" ng-model="grupo.valormatricula" placeholder="Valor matrícula")
					.form-group
						label(for="grupo-valorpension") Valor pensión
						input.form-control#grupo-valorpension(type="number" step="5" min="0" ng-model="grupo.valorpension" placeholder="Valor pensión")
					.form-group
						label Caritas en informes
						label
							input.checkbox-slider.slider-icon.colored-blue(type="checkbox" ng-model="grupo.caritas")
							span.text.si-no
					.form-group
						label(for="grupo-orden") Orden
						.spinner.spinner-horizontal
							input.spinner-input.form-control#grupo-orden(type="text" minlength="0" maxlength="10" ng-model="grupo.orden")
							.spinner-buttons.btn-group
								button.btn.spinner-down.blueberry(type="button" ng-click="restarOrden()")
									i.fa.fa-minus
								button.btn.spinner-up.purple(type="button" ng-click="sumarOrden()")
									i.fa.fa-plus
					
					br
					hr.wide
					input.btn.btn-primary.btn-lg.shiny(type="submit" ng-submit="crear()" value="Crear") 

