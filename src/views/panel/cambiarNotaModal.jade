.modal-header
	h3.modal-title.flipInY {{ subunidad.definicion }}
.modal-body
	div(style="padding-bottom: 10px;")
		h3(style="display: inline;")
			img(ng-src="{{perfilPath + alumno.foto_nombre}}" style="width: 50px; height: 50px;")
			| {{ alumno.nombres }} {{ alumno.apellidos }} =
			span(style="font-weight: bold;")  {{ nota.nota }}

	.row
		.col-lg-12.col-xs-12

			table.table.table-hover.table-condensed.table-striped
				tr(ng-repeat="escala in escalas" uib-tooltip="{{escala.desempenio}}" tooltip-append-to-body="true")
					td
						| {{escala.valoracion}}
					td
						.btn-group
							a.btn.btn-sm(ng-repeat="n in [] | range:escala.porc_inicial:escala.porc_final"
								ng-class="escala.perdido ? 'btn-danger':'btn-default'"
								ng-click="cambiaNota(n)")
								| {{n}}






.modal-footer
	button.btn.btn-labeled.btn-default(ng-click="ok()") Cerrar
		i.btn-label.fa.fa-check

