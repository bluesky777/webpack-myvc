.col-lg-6.col-sm-6.col-xs-12
	.widget
		.widget-header.bordered-bottom.bordered-blue
			span.widget-caption Editar usuario
		.widget-body
			div
				form(role="form" ng-submit="guardar()")

					.form-group
						label Tipo usuario
						ui-select(ng-model="usuario.tipo" theme="select2" style="min-width: 200px;")
							ui-select-match(placeholder="Tipo usuario" allow-clear="true") {{$select.selected.tipo}}
							ui-select-choices(repeat="tipo in tipos | filter: $select.search")
								div(ng-bind-html="tipo.tipo | highlight: $select.search")
				