.col-lg-6.col-sm-6.col-xs-12
	.widget
		.widget-header.bordered-bottom.bordered-blue
			span.widget-caption Nuevo profesor
		.widget-body
			div
				form(role="form" ng-submit="crear()")
					uib-tabset
						uib-tab(heading="Información")
							.form-group
								label(for="profesor-nombres") Nombres
								input.form-control#profesor-nombres(type="text" ng-model="profesor.nombres" placeholder="Nombres")
							.form-group
								label(for="profesor-apellidos") Apellidos
								input#profesor-apellidos.form-control(type="text" ng-model="profesor.apellidos" placeholder="Apellidos")
							.form-group
								label Sexo
								.row
									.col-lg-3.col-sm-4.col-xs-6
										.radio
											label
												input.inverted(type="radio" name="sexo" value="M" ng-model="profesor.sexo")
												span.text Masculino
									.col-lg-3.col-sm-4.col-xs-6
										.radio
											label
												input.inverted(type="radio" name="sexo" value="F" ng-model="profesor.sexo")
												span.text Femenino
							.form-group
								label(for="profesor-fecha-nac") Fecha de nacimiento
								.controls
									.input-group
										span.input-group-addon
											i.fa.fa-calendar
										input.form-control.active#profesor-fecha-nac(type="text" uib-datepicker-popup="dd-MMMM-yyyy" ng-model="profesor.fecha_nac" is-open="data.isOpen" ng-click="data.isOpen = true" max-date="'2015-06-22'" datepicker-options="dateOptions" close-text="Aceptar" current-text="Hoy" clear-text="Borrar" placeholder="Fecha nacimiento")
							.form-group
								label(for="profesor-ciudad-nac") Ciudad nacimiento



							h5.row-title.before-blue Ciudad de nacimiento
							.form-group
								label Pais
								ui-select(ng-model="profesor.pais_nac" on-select="paisNacSelect($item, $model)" theme="select2" style="min-width: 200px;")
									ui-select-match(placeholder="Pais nacimiento") {{$select.selected.pais}} ({{$select.selected.abrev}})
									ui-select-choices(repeat="pais in paises | filter: $select.search")
										div(ng-bind-html="pais.pais | highlight: $select.search")
										small {{pais.departamento | highlight: $select.search}}
							.form-group
								label Departamento
								ui-select(ng-model="profesor.departamento_nac" on-select="departNacSelect($item, $model)" theme="select2" style="min-width: 200px;")
									ui-select-match(placeholder="Departamento nacimiento") {{$select.selected.departamento}}
									ui-select-choices(repeat="departamento in departamentosNac | filter: $select.search")
										div(ng-bind-html="departamento.departamento | highlight: $select.search")

							.form-group
								label Ciudad
								ui-select(ng-model="profesor.ciudad_nac" theme="select2" style="min-width: 200px;")
									ui-select-match(placeholder="Ciudad nacimiento" allow-clear="true") {{$select.selected.ciudad}}
									ui-select-choices(repeat="ciudad in ciudadesNac | filter: $select.search")
										div(ng-bind-html="ciudad.ciudad | highlight: $select.search")

							hr.wide

							.form-group
								label(for="profesor-titulo") Título
								input#profesor-titulo.form-control(type="text" ng-model="profesor.titulo" placeholder="Título o profesión")


							.form-group
								label Tipo documento
								ui-select(ng-model="profesor.tipo_doc" theme="select2" style="min-width: 300px;")
									ui-select-match(placeholder="Tipo de documento" allow-clear="true") {{$select.selected.tipo}}{{ ' ('+$select.selected.abrev+')'}}
									ui-select-choices(repeat="tipo_doc in tipos_doc")
										div(ng-bind-html="tipo_doc.tipo | highlight: $select.search")
										small {{tipo_doc.abrev}}
							.form-group
								label(for="profesor-documento") Número documento
								input#profesor-documento.form-control(type="text" ng-model="profesor.num_doc" placeholder="Documento")


							h5.row-title.before-blue Ciudad de documento
							.form-group
								label Pais
								ui-select(ng-model="profesor.pais_doc" on-select="paisSelecionado($item, $model)" theme="select2" style="min-width: 200px;")
									ui-select-match(placeholder="Pais documento") {{$select.selected.pais}} ({{$select.selected.abrev}})
									ui-select-choices(repeat="pais in paises | filter: $select.search")
										div(ng-bind-html="pais.pais | highlight: $select.search")
										small {{pais.departamento | highlight: $select.search}}
							.form-group
								label Departamento
								ui-select(ng-model="profesor.departamento_doc" on-select="departSeleccionado($item, $model)" theme="select2" style="min-width: 200px;")
									ui-select-match(placeholder="Departamento documento") {{$select.selected.departamento}}
									ui-select-choices(repeat="departamento in departamentos | filter: $select.search")
										div(ng-bind-html="departamento.departamento | highlight: $select.search")

							.form-group
								label Ciudad
								ui-select(ng-model="profesor.ciudad_doc" theme="select2" style="min-width: 200px;")
									ui-select-match(placeholder="Ciudad documento" allow-clear="true") {{$select.selected.ciudad}}
									ui-select-choices(repeat="ciudad in ciudades | filter: $select.search")
										div(ng-bind-html="ciudad.ciudad | highlight: $select.search")


						uib-tab(heading="Datos extras")
							.form-group
								label(for="profesor-estado-civil") Estado civil
								ui-select(ng-model="profesor.estado_civil" theme="select2" style="min-width: 100px;")
									ui-select-match(placeholder="Estado civil" allow-clear="true") {{$select.selected.estado_civil}}
									ui-select-choices(repeat="estado in estados_civiles | filter: $select.search")
										div(ng-bind-html="estado.estado_civil | highlight: $select.search")

							.form-group
								label(for="profesor-telefono") Teléfono
								input#profesor-telefono.form-control(type="text" ng-model="profesor.telefono" placeholder="Teléfono")
							.form-group
								label(for="profesor-celular") Celular
								input#profesor-celular.form-control(type="text" ng-model="profesor.celular" placeholder="Celular")
							.form-group
								label(for="profesor-barrio") Barrio
								input#profesor-barrio.form-control(type="text" ng-model="profesor.barrio" placeholder="Barrio")
							.form-group
								label(for="profesor-direccion") Dirección
								input#profesor-direccion.form-control(type="text" ng-model="profesor.direccion" placeholder="Direccion")

						uib-tab(heading="Usuario")
							.form-group
								label(for="profesor-username") Nombre de usuario
								input#profesor-username.form-control(type="text" ng-model="profesor.username" placeholder="Nombre usuario")
							.form-group
								label(for="profesor-password") Contraseña
								input#profesor-password.form-control(type="password" ng-model="profesor.password" placeholder="Contraseña")
							.form-group
								label(for="profesor-password2") Verificar contraseña
								input#profesor-password2.form-control(type="password" ng-model="profesor.password2" placeholder="Verificar contraseña")
							.form-group
								label(for="profesor-email") Correo electrónico
								input#profesor-email.form-control(type="email" ng-model="profesor.email" placeholder="Correo electrónico")
							.form-group
								label ¿Es Super usuario?
								label
									input.checkbox-slider.slider-icon.colored-blue(type="checkbox" ng-model="profesor.superuser")
									span.text.si-no


					br
					input.btn.btn-primary.btn-lg.shiny(type="submit" ng-submit="crear()" value="Crear")
					a.btn.btn-danger.btn-lg.shiny(type="button" ui-sref="panel.profesores") Ocultar


