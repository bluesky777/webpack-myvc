div(ng-if="row.entity.currentyear==-1" style="text-align:right; color: #ccc;" uib-tooltip="No se encuentra matricula hasta el año pasado" tooltip-placement="left") N/A 
	a.btn.btn-info.btn-xs.shiny(ng-click="grid.appScope.matricularUno(row.entity); row.entity.currentyear = 1; row.entity.nombregrupo = grid.appScope.dato.grupo.nombre;" uib-tooltip="Matricular en \n <<{{grid.appScope.dato.grupo.nombre| uppercase}}>>" tooltip-placement="right" href="") 
		| Matricular

div(ng-if="row.entity.currentyear==1" style="text-align:right;") {{row.entity.nombregrupo}}
	a.btn.btn-success.btn-xs.shiny(ng-click="grid.appScope.matricularUno(row.entity); row.entity.currentyear = 1; row.entity.nombregrupo = grid.appScope.dato.grupo.nombre;" uib-tooltip="Matricular en \n <<{{grid.appScope.dato.grupo.nombre| uppercase}}>>" tooltip-placement="right" href="") 
		| Cambiar
	a.btn.btn-default.btn-xs.shiny.icon-only.danger(ng-click="grid.appScope.eliminarMatricula(row.entity); row.entity.currentyear = -1;" uib-tooltip="Eliminar matrícula" tooltip-placement="right" href="") 
		i.fa.fa-times

div(ng-if="row.entity.currentyear==0" style="text-align:right; color: #ccc;")
	span(uib-tooltip="Último grupo en que ha estado" tooltip-placement="left")
		| ({{row.entity.abrevgrupo}})
	a.btn.btn-info.btn-xs.shiny(ng-click="grid.appScope.matricularUno(row.entity); row.entity.currentyear = 1; row.entity.nombregrupo = grid.appScope.dato.grupo.nombre;" uib-tooltip="Matricular en \n <<{{grid.appScope.dato.grupo.nombre| uppercase}}>>" tooltip-placement="right" href="") Matricular
